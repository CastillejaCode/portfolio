---
import Layout from './Layout.astro';
const { title } = Astro.props;
---

<Layout title={title}>
  <main>
    <div>
      <slot name='info' />
    </div>
    <section>
      <ol>
        <slot />
      </ol>
    </section>
  </main>
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
    margin: 0 auto;
    padding: 0 3rem;
  }

  div {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem 0;
    gap: 0.25rem;
  }

  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  ol {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 32rem;
  }
</style>
