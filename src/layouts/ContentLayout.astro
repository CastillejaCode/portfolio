---
import Layout from './Layout.astro';
const { title } = Astro.props;
---

<Layout title={title}>
  <main>
    <div>
      <p>web dev content, mostly</p>
      <p>updated weekly, probably</p>
    </div>
    <slot />
  </main>
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
    margin: 0 auto;
    padding: 0 3rem;
  }

  div {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem 0;
    gap: 0.25rem;
  }
</style>
