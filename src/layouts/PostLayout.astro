---
import './Layout.astro';
import Layout from './Layout.astro';
const { frontmatter } = Astro.props;
const dateOptions = {
  month: 'long',
  day: 'numeric',
};
---

<Layout title={frontmatter.title}>
  <main>
    <section>
      <h1>{frontmatter.title}</h1>
      <h2>{frontmatter.author}</h2>
      <time datetime={frontmatter.date.toISOString()}
        >{frontmatter.date.toLocaleDateString('en-US', dateOptions)}</time
      >
      {frontmatter.tags && <p>tags: {frontmatter.tags.join(', ')}</p>}
    </section>
    <section class='prose'>
      <slot />
    </section>
  </main>
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    flex: 1;
    gap: 2rem;
    max-width: 64rem;
    width: 100%;
    margin: 0 auto;
    padding: 2rem;
  }

  h1 {
    font-size: var(--text-4xl);
    line-height: 2.5rem;
    padding-bottom: 1rem;
  }

  h2,
  time {
    font-size: var(--text-lg);
  }

  .prose {
  }
</style>

<style is:global>
  .prose {
    font-family: Verdana, Geneva, Tahoma, sans-serif;
    width: 100%;
    max-width: 65ch;
    align-self: center;

    & * {
      font-size: revert;
      font-weight: revert;
      margin: revert;
    }
  }
</style>
