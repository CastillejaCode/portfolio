---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Content/Hero.astro';
import About from '../components/Content/About.astro';
import Projects from '../components/Content/Projects.astro';
import Contact from '../components/Content/Contact.astro';

const title = 'Julian Krzysiak';
---

<Layout title={title}>
  <main>
    <Hero title={title} />
    <About />
    <Projects />
    <Contact />
  </main>
</Layout>

<style>
  main {
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    max-width: 64rem;
    padding: 0 2rem;
  }

  main :global(.section-title) {
    font-size: var(--text-3xl);
    color: var(--color-primary);
    letter-spacing: 0.025rem;

    @media (min-width: 1024px) {
      font-size: var(--text-5xl);
    }
  }
</style>
