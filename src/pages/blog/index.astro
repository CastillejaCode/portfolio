---
import Layout from '@/layouts/Layout.astro';
import Post from '@/features/blog/components/Post/index.astro';
import { getCollection } from 'astro:content';

const title = 'Blog';
const posts = await getCollection('blog');
---

<Layout title={title}>
  <main>
    <div>
      <p>web dev content, mostly</p>
      <p>updated weekly, probably</p>
    </div>
    <section>
      <h2>Latest</h2>
      <ol>
        {
          posts.map((post) => {
            return <Post url={`/blog/${post.slug}`} data={post.data} />;
          })
        }
      </ol>
    </section>
  </main>
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
    margin: 0 auto;
    padding: 0 2rem;
  }

  div {
    display: flex;
    flex-direction: column;
    padding: 2rem;
    gap: 0.25rem;
  }

  section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
  }

  h2 {
    font-size: var(--text-2xl);
  }

  ol {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 32rem;
  }
</style>
