---
import ProjectCard from '../General/ProjectCard.astro';
import { projects } from '../../config/projects.ts';
---

<section id='projects' class='flex flex-col gap-8 py-4 lg:gap-12 lg:py-8'>
  <a href='#projects' class='text-3xl dark:text-violet-300 lg:text-5xl'>
    Projects
  </a>
  <div class='grid place-content-center gap-8 lg:grid-cols-2'>
    {projects.map((project) => <ProjectCard details={project} />)}
  </div>
</section>
