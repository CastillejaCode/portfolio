---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section
  id='hero'
  class='flex h-[calc(100vh-64px)] flex-col justify-center gap-10 lg:h-[calc(100vh-84px)] lg:gap-16'
>
  <div class='flex flex-col gap-2'>
    <h1
      class='text-3xl font-bold text-rose-700 dark:text-violet-300 lg:text-5xl'
    >
      {title}
    </h1>
    <h2 class='text-xl lg:text-3xl'>Full-Stack Web Developer</h2>
  </div>
  <nav class='flex flex-col gap-4 text-lg lg:text-xl'>
    <a href='#about'
      >Tell me <b class='text-rose-700 dark:text-violet-300'>about</b> yourself?</a
    >
    <a href='#projects'
      >What <b class='text-rose-700 dark:text-violet-300'>projects</b> have you
      made?</a
    >
    <a href='#contact'
      >How do I <b class='text-rose-700 dark:text-violet-300'>contact</b> you?</a
    >
  </nav>
</section>
