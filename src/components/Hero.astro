---
import { Image } from 'astro:assets';
import selfie from '../assets/selfie.jpg';
---

<section id='hero' class='flex flex-col items-center'>
  <Image
    src={selfie}
    alt='Selfie of Julian Krzysiak'
    class='m-4 w-full max-w-xl rounded-full border-4 border-slate-900'
  />
  <div class='flex flex-col gap-4 text-slate-800'>
    <h1 class='text-center text-6xl'>Julian Krzysiak</h1>
    <h2 class='text-4xl'>
      Full-Stack <br /> Web <br /> Development
    </h2>
  </div>
</section>
