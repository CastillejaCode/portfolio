---
import { Image } from 'astro:assets';

const {
  details: {
    title,
    summary,
    img: { src, alt },
    links: { website, github },
  },
} = Astro.props;
---

<article
  class='flex flex-col gap-2 rounded-lg border-2 border-slate-900 bg-slate-300 p-6 shadow-sm dark:bg-slate-800'
>
  <h1 class='text-center text-2xl dark:text-violet-300'>{title}</h1>
  <Image
    src={src}
    alt={alt}
    class='aspect-video rounded-md border border-slate-900'
  />
  <p class='mb-4'>{summary}</p>
  <div
    class='flex justify-between text-2xl font-bold text-slate-900 dark:text-xl dark:font-normal dark:text-violet-300'
  >
    <a
      href={website}
      class='rounded-lg first-letter:text-rose-700 dark:bg-slate-900 dark:px-4 dark:py-1 dark:first-letter:text-inherit'
      >Website</a
    >
    <a
      href={github}
      class='rounded-lg first-letter:text-rose-700 dark:bg-slate-900 dark:px-4 dark:py-1 dark:first-letter:text-inherit'
      >GitHub</a
    >
  </div>
</article>
