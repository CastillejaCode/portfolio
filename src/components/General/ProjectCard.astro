---
import { Image } from 'astro:assets';

const {
  details: {
    title,
    summary,
    img: { src, alt },
    links: { website, github },
  },
} = Astro.props;
---

<article
  class='flex flex-col gap-4 rounded-xl border-2 border-slate-900 bg-slate-300 p-6'
>
  <h1 class='text-xl'>{title}</h1>
  <Image src={src} alt={alt} />
  <p>{summary}</p>
  <div class='flex justify-around'>
    <a
      href={website}
      class='rounded-md bg-slate-900 px-2 py-1 font-bold text-rose-700'
      >Website</a
    >
    <a href={github}>GitHub</a>
  </div>
</article>
