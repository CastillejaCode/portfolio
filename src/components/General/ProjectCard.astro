---
import { Image } from 'astro:assets';

const {
  details: {
    title,
    summary,
    img: { src, alt },
    links: { website, github },
  },
} = Astro.props;
---

<article
  class='flex flex-col gap-2 rounded-md border-2 border-slate-900 bg-slate-300 p-6 shadow-sm'
>
  <h1 class='text-center text-2xl'>{title}</h1>
  <Image
    src={src}
    alt={alt}
    class='aspect-video rounded-md border border-slate-900'
  />
  <p class='mb-4'>{summary}</p>
  <div class='flex justify-between text-2xl font-bold text-slate-900'>
    <a href={website} class='first-letter:text-rose-700'>Website</a>
    <a href={github} class='first-letter:text-rose-700'>GitHub</a>
  </div>
</article>
