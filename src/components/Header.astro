---
import DarkModeButton from './DarkModeButton.svelte';
const pathName = Astro.url.pathname.split('/').at(1);
---

<header>
  <nav>
    <a href='/' class={`${!pathName && 'active'}`}>JK</a>
    <a href='/blog' class={`${pathName === 'blog' && 'active'}`}>Blog</a>
    <a href='#' class={`${pathName === 'reviews' && 'active'}`}>Reviews</a>
  </nav>
  <DarkModeButton client:load='svelte' />
</header>

<style>
  .active {
    border-bottom: solid 1px;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    font-size: var(--text-xl);
    color: var(--color-neutral);
  }

  nav {
    width: 50%;
    max-width: 24rem;
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1rem;
  }

  a:first-child {
    font-size: var(--text-2xl);
  }

  @media (min-width: 1024px) {
    header {
      padding: 1.5rem;
    }

    a:first-child {
      font-size: var(--text-3xl);
    }
  }
</style>
