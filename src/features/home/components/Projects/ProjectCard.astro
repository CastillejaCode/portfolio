---
import { Image } from 'astro:assets';

const {
  details: {
    title,
    summary,
    img: { src, alt },
    links: { website, github },
  },
} = Astro.props;
---

<article>
  <h2>
    {title}
  </h2>
  <div class='info'>
    <div class='image'>
      <img src={src} alt={alt ?? 'Preview of website'} />
      <p>{summary}</p>
    </div>
    <div class='links'>
      <a href={website}>website</a>
      <a href={github}> github</a>
    </div>
  </div>
</article>

<style>
  article {
    display: flex;
    flex-direction: column;
    max-width: 36rem;
  }

  h2 {
    margin: 0.75rem 0;
    font-size: var(--text-3xl);
    text-align: center;
  }

  .info {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 0 1.5rem 1.5rem 1rem;
    gap: 2rem;
  }

  .image {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;

    & img {
      border: 1px solid var(--color-neutral-dark);
      border-radius: 0.375rem;
      aspect-ratio: 4/3;
    }

    & p {
      padding: 0 0.5rem;
    }
  }

  .links {
    display: flex;
    justify-content: space-between;
    font-size: var(--text-2xl);
    font-weight: 700;
  }

  a:not([href]) {
    text-decoration: line-through;
  }

  @media (min-width: 1024px) {
    h2 {
      margin: 1rem 0;
      font-size: var(--text-4xl);
    }

    .info {
      padding: 0 2rem 2rem 1.5rem;
    }

    .image p {
      font-size: var(--text-lg);
    }
  }
</style>
