---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section id='hero'>
  <div>
    <h1>
      {title}
    </h1>
    <h2>Full-Stack Web Developer</h2>
  </div>
  <nav>
    <a href='#about'>Tell me <b>about</b> yourself?</a>
    <a href='#projects'>What <b>projects</b> have you made?</a>
    <a href='#contact'>How do I <b>contact</b> you?</a>
  </nav>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 2.5rem;
    height: calc(100vh - 64px);
  }

  div {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  h1 {
    color: var(--color-primary);
    font-size: var(--text-3xl);
    font-weight: 700;
  }

  h2 {
    font-size: var(--text-xl);
  }

  nav {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    font-size: var(--text-lg);
  }

  b {
    color: var(--color-primary);
  }

  @media (min-width: 1024px) {
    section {
      height: calc(100vh - 84px);
      gap: 4rem;
    }

    h1 {
      font-size: var(--text-5xl);
    }

    h2 {
      font-size: var(--text-3xl);
    }

    nav {
      font-size: var(--text-xl);
    }
  }
</style>
